---
interface Props {
  name: string;
  title: string;
  description: string;
  standards: string[];
  riskDefault: string;
}

const { name, title, description, standards, riskDefault } = Astro.props;
---

<div class="rounded-lg border border-slate-200 p-6 hover:border-gxp-300 transition-colors">
  <div class="flex items-start justify-between mb-3">
    <h3 class="font-semibold text-lg text-slate-900">{title}</h3>
    <code class="text-xs font-mono bg-gxp-50 text-gxp-700 px-2 py-1 rounded">{name}</code>
  </div>
  <p class="text-sm text-slate-600 mb-4">{description}</p>
  <div class="space-y-2">
    <p class="text-xs font-semibold text-slate-500 uppercase tracking-wide">Standards</p>
    <div class="flex flex-wrap gap-1.5">
      {standards.map(s => (
        <span class="text-xs bg-slate-100 text-slate-600 px-2 py-0.5 rounded">{s}</span>
      ))}
    </div>
  </div>
</div>
