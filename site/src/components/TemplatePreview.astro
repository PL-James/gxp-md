---
interface Props {
  filename: string;
  description: string;
  language?: string;
  content: string;
  downloadPath: string;
}

const { filename, description, language = 'yaml', content, downloadPath } = Astro.props;
---

<div class="rounded-lg border border-slate-200 overflow-hidden">
  <div class="flex items-center justify-between px-4 py-3 bg-slate-50 border-b border-slate-200">
    <div>
      <h3 class="font-mono text-sm font-semibold text-slate-800">{filename}</h3>
      <p class="text-xs text-slate-500 mt-0.5">{description}</p>
    </div>
    <a
      href={downloadPath}
      class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium text-gxp-700 bg-gxp-50 hover:bg-gxp-100 rounded-md transition-colors"
      download
    >
      <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
      </svg>
      Download
    </a>
  </div>
  <pre class="p-4 text-sm overflow-x-auto bg-slate-950 text-slate-300 rounded-none border-none m-0"><code>{content}</code></pre>
</div>
