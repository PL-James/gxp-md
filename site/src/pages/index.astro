    </main>

    <!-- Footer -->
    <footer class="pb-8 text-center">
      <p class="text-xs text-slate-400">
        &copy; {new Date().getFullYear()} <a href="https://pharmaledger.org" class="hover:text-slate-600 transition-colors" target="_blank" rel="noopener noreferrer">PharmaLedger Association</a>
